<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.globe">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.globe.rolly.RollyGlobeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.globe.rolly.ui.my_page.edit_info_activities.MyPageEditPasswordActivity"></activity>
        <activity android:name="com.globe.rolly.ui.my_page.edit_info_activities.MyPageEditBirthdayActivity" />
        <activity android:name="com.globe.rolly.ui.my_page.edit_info_activities.MyPageEditGenderActivity" />
        <activity android:name="com.globe.rolly.ui.my_page.edit_info_activities.MyPageEditEmailActivity" />
        <activity android:name="com.globe.rolly.ui.my_page.edit_info_activities.MyPageEditPhoneNumberActivity" />
        <activity android:name="com.globe.rolly.ui.my_page.edit_info_activities.MyPageEditNameActivity" />
        <activity android:name="com.globe.rolly.ui.my_page.ProfileEditActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${googleMapApiKey}" />

        <activity android:name="com.globe.rolly.ui.recommend.inner_contents.InnerContentsActivity" />
        <activity android:name="com.globe.rolly.ui.signin.SignInActivity">


        </activity>
        <activity android:name="com.globe.rolly.ui.signup.SignUpActivity" />
        <activity android:name="com.globe.rolly.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".rolly.FcmMessageService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>


    </application>

</manifest>