<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rollyglobe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".RollyGlobeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.rollyglobe.ui.my_page.MyPageEditPasswordActivity"></activity>
        <activity android:name="com.rollyglobe.ui.my_page.MyPageEditBirthdayActivity" />
        <activity android:name="com.rollyglobe.ui.my_page.MyPageEditGenderActivity" />
        <activity android:name="com.rollyglobe.ui.my_page.MyPageEditEmailActivity" />
        <activity android:name="com.rollyglobe.ui.my_page.MyPageEditPhoneNumberActivity" />
        <activity android:name="com.rollyglobe.ui.my_page.MyPageEditNameActivity" />
        <activity android:name="com.rollyglobe.ui.my_page.ProfileEditActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${googleMapApiKey}" />

        <activity android:name="com.rollyglobe.ui.recommend.inner_contents.InnerContentsActivity" />
        <activity android:name=".ui.signin.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".ui.signup.SignUpActivity" />
        <activity android:name=".ui.MainActivity">

        </activity>
    </application>

</manifest>