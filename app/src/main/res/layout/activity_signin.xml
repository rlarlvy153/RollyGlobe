<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity"
    >

    <ImageView
        android:id="@+id/back_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:background="#f0f"
        />

    <ImageView
        android:id="@+id/banner_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="56dp"
        android:layout_width="159dp"
        android:layout_height="53dp"
        android:background="#f0f"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="314dp"
        android:layout_height="184.55dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="32.15dp"
        app:layout_constraintTop_toBottomOf="@id/banner_image"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/edit_info_container"
    >
        <EditText

            android:id="@+id/register_email_edit"
            android:hint="@string/register_email"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="0dp"
            android:padding="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="10dp"
            />

        <EditText
            android:id="@+id/register_nickname_edit"
            android:hint="@string/register_nickname"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="53.55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="14dp"
            android:padding="0dp"
            />

        <EditText
            android:id="@+id/register_password"
            android:hint="@string/register_password"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="106.67dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="14dp"
            android:padding="0dp"
            />

        <EditText
            android:id="@+id/register_password_again"
            android:hint="@string/register_password_again"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="160dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="14dp"
            android:padding="0dp"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/gender_birth_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23.67dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_info_container"
        >

        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/year_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/month_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/day_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/phone_container"
        android:layout_width="314dp"
        android:layout_height="80.67dp"
        app:layout_constraintTop_toBottomOf="@id/gender_birth_container"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="29.97dp"
        android:layout_marginLeft="24dp"


        >

        <Spinner
            android:id="@+id/nation_code_spinner"
            android:layout_width="312.67dp"
            android:layout_height="36.67dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/spinner_background"
            />
        <EditText
            android:hint="@string/register_phone_number"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:textSize="14dp"
            android:layout_marginTop="21.48dp"
            app:layout_constraintTop_toBottomOf="@id/nation_code_spinner"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="0dp"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:text="@string/register_with_email"
        android:layout_width="313dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/phone_container"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="24dp"
        android:padding="0dp"
        android:background="#42ade2"
        android:textColor="#fff"
        />



</androidx.constraintlayout.widget.ConstraintLayout>