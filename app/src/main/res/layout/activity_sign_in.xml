<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/back_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:background="#f0f"
        />

    <ImageView
        android:id="@+id/banner_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="56dp"
        android:layout_width="159dp"
        android:layout_height="53dp"
        android:background="#f0f"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signin_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/banner_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32.15dp"
        android:layout_marginStart="37dp"
    >

        <EditText

            android:id="@+id/signip_email_edit"
            android:hint="@string/signin_email"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="0dp"
            android:padding="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14dp"
            />

        <EditText
            android:id="@+id/signin_password_edit"
            android:hint="@string/signin_password"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="32.48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="14dp"
            android:padding="0dp"
            />

        <CheckBox
            android:id="@+id/keep_login_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1.66dp"
            android:layout_marginTop="18.34dp"
            android:text="@string/signin_keep_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signin_password_edit"
            android:textSize="11dp"

            />

        <Button
            android:id="@+id/signin_button"
            android:text="@string/signin_email"
            android:layout_width="313dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/keep_login_checkbox"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="18.35dp"
            android:padding="0dp"
            android:background="#42ade2"
            android:textColor="#fff"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/signin_button"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/forget_password"
            android:layout_marginTop="22.45dp"
            android:layout_marginStart="111.13dp"
            android:textSize="11dp"
            />
        <include layout="@layout/signin_with_facebook"
            android:id="@+id/signin_with_facebook_container"
            android:layout_width="184.69dp"
            android:layout_height="37.66dp"
            app:layout_constraintTop_toBottomOf="@id/forget_password"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="135.89dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/signin_with_facebook_container"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="74.91dp"
            >

            <TextView
                android:textSize="14dp"
                android:text="@string/signin_first_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/move_to_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="#42ADE2"
                android:textAppearance="@style/Widget.AppCompat.Spinner.Underlined"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>