<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="120dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/reservation_thumbnail"
        android:background="#AC0000"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <TextView
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/reservation_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/reservation_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>