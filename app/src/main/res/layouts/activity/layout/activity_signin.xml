<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <include
        android:id="@+id/back_icon"
        layout="@layout/back_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/banner_image"
        layout="@layout/rollyglobe_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signin_container"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_image">

        <EditText
            android:id="@+id/signin_email_edit"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="0dp"
            android:hint="@string/signin_email"
            android:padding="0dp"
            android:text="rlasfsf@naver.com"
            android:textSize="14dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_marginTop="5dp"
            android:id="@+id/signin_email_edit_underline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signin_email_edit"
            android:background="#B6B6B6"
            />

        <EditText
            android:id="@+id/signin_password_edit"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="33dp"
            android:hint="@string/signin_password"
            android:padding="0dp"
            android:text="kgp"
            android:textSize="14dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_marginTop="5dp"
            android:id="@+id/signin_password_edit_underline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signin_password_edit"
            android:background="#B6B6B6"
            />

        <CheckBox
            android:id="@+id/keep_login_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/signin_keep_login"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signin_password_edit"

            />

        <Button
            android:id="@+id/signin_button"
            style="@style/rollyglobe_default_button"
            android:layout_width="286dp"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:onClick="onClickSignIn"
            android:text="@string/signin_button"
            android:textSize="14dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/keep_login_checkbox" />

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/forget_password"
            android:textSize="11dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signin_button" />

        <include
            android:id="@+id/signin_with_facebook_container"
            layout="@layout/signin_with_facebook"
            android:layout_width="286dp"
            android:layout_height="38dp"
            android:layout_marginTop="216dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forget_password" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signin_with_facebook_container">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signin_first_time"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClickSignUpText"
                android:text="@string/move_to_signup"
                android:layout_marginStart="5dp"
                android:textAppearance="@style/Widget.AppCompat.Spinner.Underlined"
                android:textColor="#42ADE2"
                android:textSize="11dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>