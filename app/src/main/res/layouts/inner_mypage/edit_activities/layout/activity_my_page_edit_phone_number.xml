<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.my_page.edit_info_activities.MyPageEditPhoneNumberActivity"
    android:orientation="vertical"
    >
    <TextView
        android:text="@string/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/nation_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/mypage_nation_code_spinner"
        android:layout_width="312.67dp"
        android:layout_height="36.67dp"
        android:gravity="center_horizontal"
        android:background="@drawable/spinner_background"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:id="@+id/edit_text_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text_phone_number"
            android:text="@string/apply"
            android:onClick="onClickApplyBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            style="@style/rollyglobe_default_button"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>