<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="120dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginEnd="10dp"
    android:background="@drawable/mypage_reservation_list_background"
    >

    <ImageView
        android:id="@+id/reservation_thumbnail"
        android:background="#AC0000"
        android:layout_width="120dp"
        android:layout_height="110dp"/>
    <TextView
        android:textSize="11dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/reservation_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_marginTop="6dp"
        />
    <TextView
        android:textSize="8dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:id="@+id/reservation_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#8D8D8D"
        />

</LinearLayout>