<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".my_page.MyPageEditBirthdayActivity">
    <TextView
        android:text="@string/birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Spinner
            android:id="@+id/edit_year_spinner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/edit_month_spinner"
            app:layout_constraintLeft_toRightOf="@id/edit_year_spinner"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/edit_day_spinner"
            app:layout_constraintLeft_toRightOf="@id/edit_month_spinner"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <Button
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_year_spinner"
            android:text="@string/apply"
            android:onClick="onClickApplyBtn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            style="@style/rollyglobe_default_button"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>