<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#59B6F8</item>
        <item name="colorPrimary">#fff</item>
        <item name="colorAccent">#000</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/nanum_square_r</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="logo">@drawable/logo_fullletter</item>

    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#59B6F8</item>
    </style>

    <style name="tabTextAppearance" parent="TextAppearance.AppCompat.Button">

        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">14dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>

    </style>

    <style name="MypageTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">13dp</item>

    </style>

    <style name="TabBarTheme" parent="Widget.Design.TabLayout">
        <!-- Customize your theme here. -->
        <item name="android:background">#fff</item>

    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/rg_blue</item>       <!-- 탭바 선택된 텍스트 -->

        <item name="colorAccent">@color/rg_blue</item>                    <!-- 하단 움직이는 바 색-->
    </style>

    <style name="recommendation_item_title" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#000000ff</item>
    </style>

    <style name="recommendation_item_description" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">9dp</item>
        <item name="android:background">#000000ff</item>

    </style>

    <style name="inner_contents_star">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
    </style>

    <style name="inner_contents_small_icon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
    </style>

    <style name="inner_contents_small_icon_button">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
    </style>

    <style name="inner_contents_small_icon_text">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
    </style>

    <style name="inner_contents_description_header">
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="inner_contents_description">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>


    <style name="inner_contents_button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">#AAAAAA</item>
    </style>

    <style name="inner_contents_header_text" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="edit_profile_attribute_head">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/nanum_square_b</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="edit_profile_attribute_value">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#A1A1A1</item>
        <item name="android:fontFamily">@font/nanum_square_b</item>

        <item name="android:layout_marginEnd">11dp</item>
    </style>

    <style name="rollyglobe_default_button">
        <item name="android:padding">0dp</item>
        <item name="android:background">#42ade2</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="mypage_tab_text_style" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:background">#000000ff</item>
        <item name="android:textColor">#C7C7C7</item>
    </style>


</resources>
